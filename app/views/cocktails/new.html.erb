<%= render 'shared/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-6">
    <div class="border bg-white p-4 m-4">
      <h1 class="mt-2">Add your cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Add your cocktail', class: 'btn btn-primary' %>
      <% end %>
    </div>
    </div>
  </div>
</div>